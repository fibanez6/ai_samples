# -----------------------------------------------------------------
# CONFIGURATION FILE FOR AI AGENT
# -----------------------------------------------------------------

AGENT_PROVIDER=github

# -----------------------------------------------------------------
# GITHUB OPENAI PROVIDER
# -----------------------------------------------------------------
# Free tier with conservative rate limits
# Get your token at: https://github.com/settings/tokens
GITHUB_TOKEN=YOUR_GITHUB_TOKEN_HERE
GITHUB_MODEL=openai/gpt-4o
GITHUB_API_URL=https://models.github.ai/inference"

# -----------------------------------------------------------------
# AZURE OPENAI PROVIDER
# -----------------------------------------------------------------
AZURE_ENDPOINT=https://YOUR-AZURE-OPENAI-SERVICE-NAME.openai.azure.com/openai/v1
AZURE_MODEL=YOUR-AZURE-DEPLOYMENT-NAME

# -----------------------------------------------------------------
# OLLAMA OPENAI PROVIDER
# -----------------------------------------------------------------
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama2-7b-chat

# -----------------------------------------------------------------
# OPENAI PROVIDER
# -----------------------------------------------------------------
OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE
OPENAI_MODEL=YOUR_OPENAI_MODEL_HERE

# -----------------------------------------------------------------
# ANTHROPIC
# -----------------------------------------------------------------
ANTHROPIC_API_KEY=YOUR_ANTHROPIC_API_KEY_HERE

# -----------------------------------------------------------------
# MICROSOFT AZURE | FOUNDRY
# -----------------------------------------------------------------
AZURE_AI_PROJECT_ENDPOINT=YOUR_AZURE_AI_PROJECT_NAME
AZURE_AI_MODEL_DEPLOYMENT_NAME=gpt-5-mini

# Cosmos DB Configuration
AZURE_COSMOSDB_ACCOUNT=YOUR_COSMOS_DB_ACCOUNT
AZURE_COSMOSDB_DATABASE=YOUR_COSMOS_DB_KEY
AZURE_COSMOSDB_CONTAINER=ai_agent_db

# Entra Proxy Configuration
ENTRA_PROXY_AZURE_CLIENT_ID=YOUR_ENTRA_PROXY_AZURE_CLIENT_ID
ENTRA_PROXY_AZURE_CLIENT_SECRET=YOUR_ENTRA_PROXY_AZURE_CLIENT_SECRET
AZURE_TENANT_ID=YOUR_AZURE_TENANT_ID

# -----------------------------------------------------------------
# OBSERVABILITY CONFIGURATION
# -----------------------------------------------------------------
# OpenTelemetry Configuration (for Aspire Dashboard)
# Uncomment to enable tracing, metrics, and logs export
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
