{
  "servers": {
    "basic-mcp": {
      "type": "stdio",
      "command": "uv",
      "cwd": "${workspaceFolder}/06_mcp",
      "args": [
        "run",
        "mcp_basic_server_stdio.py"
      ]
    },
    "basic-http": {
      "type": "stdio",
      "command": "uv",
      "cwd": "${workspaceFolder}/06_mcp",
      "args": [
        "run",
        "mcp_basic_server_http.py"
      ],
      "env": {
        "PORT": "8001"
      }
    },
    "basic-mcp-http-client": {
      "type": "http",
      "url": "http://localhost:8000/mcp"
    },
    "basic-mcp-debug": {
      "type": "stdio",
      "command": "uv",
      "cwd": "${workspaceFolder}/06_mcp",
      "args": [
        "run",
        "--",
        "python",
        "-m",
        "debugpy",
        "--listen",
        "0.0.0.0:5678",
        "mcp_basic_server_stdio.py"
      ]
    },
    "github": {
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp/",
      "headers": {
        "Authorization": "Bearer ${input:github_mcp_pat}"
      }
    },
    "local-github-server": {
      "command": "docker",
      "args": [
      "run",
      "-i",
      "--rm",
      "-e",
      "GITHUB_PERSONAL_ACCESS_TOKEN",
      "-e",
      "GITHUB_HOST",
      "ghcr.io/github/github-mcp-server"
      ],
      "env": {
          "GITHUB_PERSONAL_ACCESS_TOKEN": "${input:github_token}",
          "GITHUB_HOST": "https://<your GHES or ghe.com domain name>"
      }
}
  },
  "inputs": [
    {
      "type": "promptString",
      "id": "github_mcp_pat",
      "description": "GitHub Personal Access Token",
      "password": true
    }
  ]
}